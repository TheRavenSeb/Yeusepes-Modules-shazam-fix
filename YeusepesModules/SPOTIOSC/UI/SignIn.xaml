                                    </ColorAnimation.EasingFunction>
                                </ColorAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>
    <Viewbox Stretch="Uniform"
             Margin="0,-40,0,10">
        <Grid>
            <Grid x:Name="SignedOutState"
                  Visibility="Visible">
                <Button VerticalAlignment="Center"
                        Style="{StaticResource CustomButtonStyle}"
                        Click="OnSignInClick"
                        >
                    <Grid>
                        <!-- Path for the GeometryGroup -->
                        <Path Data="{StaticResource Button}"
                              Stretch="Uniform"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center" />
                        <Path Data="{StaticResource Logos}"
                              Stretch="Uniform"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Margin="10" />
                        <!-- Text overlay -->
                    </Grid>
                </Button>
            </Grid>
            <Grid x:Name="SignedInState"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="-200,0,0,0"
                  Visibility="Hidden">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!-- Circle (Main Icon Background) -->
                    <Grid>
                        <Ellipse Width="600"
                                 Height="600"
                                 Fill="#D9D9D9" />
                        <Ellipse Width="600"
                                 Height="600">
                            <Ellipse.Fill>
                                <ImageBrush x:Name="ProfileImageBrush"
                                            Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                    <Rectangle Width="50" />
                    <StackPanel HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="20,0,0,0">
                        <!-- Text Content -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="20,40,0,0">
                            <TextBlock Text="Hey, "
                                       x:Name="HeyText"
                                       Foreground="White"
                                       FontSize="155.567"
                                       FontWeight="Medium" />
                            <TextBlock Text="{Binding Path=DisplayName}"
                                       x:Name="UserName"
                                       Foreground="White"
                                       FontSize="155.567"
                                       FontWeight="Bold" />
                            <TextBlock Text="!"
                                       x:Name="ExclamationText"
                                       Foreground="White"
                                       FontSize="155.567"
                                       FontWeight="Bold" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="30,0,50,10">
                            <TextBlock Text="Your plan is: "
                                       x:Name="SignedInAsText"
                                       Foreground="White"
                                       FontSize="70.239"
                                       FontWeight="Regular" />
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock x:Name="PlanText"
                                           Foreground="White"
                                           FontSize="70.239"
                                           FontWeight="Bold" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Bottom"
                                    Margin="0,20,0,40">
                            <!-- Your Account Button -->
                            <Button Style="{StaticResource YourAccountButtonStyle}"
                                    Click="OnYourAccountClick">
                                <Grid>
                                    <TextBlock Text="Your Account"
                                               x:Name="YourAccountText"
                                               FontSize="70"
                                               Margin="60,0,60,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </Button>
                            <Rectangle Width="50"
                                       Height="180" />
                            <Button Style="{StaticResource SignOutButtonStyle}"
                                    Click="OnSignOutClick">
                                <Grid>
                                    <TextBlock Text="Sign Out"
                                               x:Name="SignOutText"
                                               FontSize="70"
                                               Margin="60,0,60,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <!-- Spinner Overlay -->            
            <Grid x:Name="SpinnerOverlay" Visibility="Collapsed" Background="#80000000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Canvas Width="250" Height="250">
                        <!-- The circular spinner -->
                        <Path x:Name="SpinnerArc"
                  Data="M125,15 A110,110 0 1 1 124.99,15"
                  StrokeThickness="40"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round">
                            <Path.Stroke>
                                <!-- Gradient from #1DB954 to Transparent -->
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" MappingMode="RelativeToBoundingBox">
                                    <GradientStop Color="#1DB954" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Path.Stroke>
                            <Path.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotateTransform" CenterX="125" CenterY="125"/>
                            </Path.RenderTransform>
                        </Path>
                    </Canvas>
                    <TextBlock x:Name="SpinnerText"
                   Text="Signing in..."
                   Foreground="White"
                   FontSize="70"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>
                </StackPanel>
                <!-- Continuous rotation animation -->
                <Grid.Triggers>
                    <EventTrigger RoutedEvent="Grid.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="SpinnerRotateTransform"
                                     Storyboard.TargetProperty="Angle"
                                     From="0" To="360" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Grid.Triggers>
            </Grid>



        </Grid>
    </Viewbox>
</UserControl>
